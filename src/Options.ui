/* Tabs */
QTabWidget::pane {
    border: 2px solid #5A5A8E; /* More contrast */
    background: #282838;
}

QTabBar::tab {
    background: #2A2A3A;
    padding: 6px;
    border: 2px solid #5A5A8E;
    border-radius: 4px;
}

QTabBar::tab:selected {
    background: #7373B9;
    color: #FFFFFF;
    border-color: #9A9ADF;
}

/* Progress Bar */
QProgressBar {
    background: #282838;
    color: #E0E0E0;
    border: 2px solid #5A5A8E; /* More visible border */
    border-radius: 4px;
    text-align: center;
}

QProgressBar::chunk {
    background: #7373B9;
}

/* Tooltips */
QToolTip {
    background-color: #3A3A5A;
    color: #FFFFFF;
    border: 2px solid #5A5A8E;
    padding: 4px;
}

/* Line Edits &amp; Text Fields */
QLineEdit, QTextEdit {
    background-color: #282838;
    color: #FFFFFF;
    border: 2px solid #FFFFFF;
    outline: none;
    border-radius: 4px;
    padding: 4px;
}
