/* Buttons */
QPushButton {
    background-color: #2A2A3A;
    color: #FFFFFF;
    border: 1px solid #5A5A8E; /* Stronger border */
    border-radius: 6px;
    padding: 6px 6px;
}

QPushButton:hover {
    background-color: #3A3A5A;
    border-color: #7373B9;
}

QPushButton:pressed {
    background-color: #5A5A8E;
    border-color: #9A9ADF;
}


QToolButton {
    background-color: #2A2A3A;
    color: #FFFFFF;
    border: 1px solid #5A5A8E; /* Stronger border */
    border-radius: 6px;
    padding: 6px 6px;
}

QToolButton:hover {
    background-color: #3A3A5A;
    border-color: #7373B9;
}

QToolButton:pressed {
    background-color: #5A5A8E;
    border-color: #9A9ADF;
}



/* Labels */
QLabel {
    color: #E0E0E0;
    border: 0px solid #000000;
}

/* List Widget &amp; Item Selection */
QListWidget, QTreeWidget, QTableWidget {
    background-color: #282838;
    color: #E0E0E0;
    border: 1px solid #5A5A8E; /* Stronger border */
    selection-background-color: #7373B9; /* More visible selection */
    selection-color: #FFFFFF;
}


/* ComboBox */
QComboBox {
    background-color: #282838;
    color: #E0E0E0;
    border: 2px solid #5A5A8E; /* Stronger contrast */
    border-radius: 4px;
    padding: 2px;
}

QComboBox QAbstractItemView {
    background-color: #282838;
    color: #E0E0E0;
    border: 2px solid #7373B9;
    selection-background-color: #7373B9;
}

